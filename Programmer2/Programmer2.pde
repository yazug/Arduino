static void ReleaseTarget()
{
  pinMode(SCK,INPUT);
  digitalWrite(SCK,0);
  pinMode(MISO,INPUT);
  digitalWrite(MISO,0);
  pinMode(MOSI,INPUT);
  digitalWrite(MOSI,0);
  pinMode(RESET,INPUT);
  digitalWrite(RESET,0);
  targetSeized = 0;
  digitalWrite(ERR_LED,1);
  digitalWrite(GOOD_LED,1);
}
static void SeizeTarget()
{
  digitalWrite(SCK,0);
  pinMode(SCK,OUTPUT);
  pinMode(MISO,INPUT);
  pinMode(MOSI,OUTPUT);
  digitalWrite(RESET,0);
  pinMode(RESET,OUTPUT);
  delayMicroseconds(4);
  digitalWrite(RESET,1);
  delayMicroseconds(4);
  digitalWrite(RESET,0);
  delay(21);
  CMD_Program_Enable();
  targetSeized = 1;
  digitalWrite(ERR_LED,0);
  digitalWrite(GOOD_LED,0);}

