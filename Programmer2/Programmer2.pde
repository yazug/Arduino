    switch( (CMD_Read_Fuse_Extended()>>1) & 3) {
    case 0: bootSize = 2048; break;
    case 1: bootSize = 1024; break;
    case 2: bootSize = 512; break;
    case 3: bootSize = 256; break;
    }
    break;
  }    
  return 1;
}

